@model System.Collections.Generic.IList<ForumSystem.Models.QuestionViewModel>

@if (User.Identity.IsAuthenticated)
{
    using(Html.BeginForm("PostQuestion", "Category", FormMethod.Post))
    {
        
    }
}

@if (Model.Count > 0)
{
    for (int i = 0; i < Model.Count; i++)
    {
        <ul>
            <li>
                <div class="count-box">
                    @Model[i].Answers.Count
                </div>
                <a class="count-value">@Model[i].Title</a>
            </li>
        </ul>
    }
}
else
{ 
    <h1 class="no-questions">No questions found!</h1>
}

