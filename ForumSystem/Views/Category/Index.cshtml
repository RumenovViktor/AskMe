@using ForumSystem.Models
@using System.Collections.Generic

@model IList<QuestionViewModel>

<div class="post-form form-group">
    @{
        Html.RenderPartial("_PostPartial", new QuestionViewModel());
    }
</div>

@if (Model.Count > 0)
{
    <div id="question-section">
        <ul class="list-group">
            @for (int i = 0; i < Model.Count; i++)
            {
            <li class="list-group-item question-box">
                
                <div class="count-box">
                    <p class="count-value">@Model[i].Answers.Count</p>
                </div>
                <a class="element-value question-name">@Model[i].Title</a>
                
            </li>
            }
        </ul>
    </div>
}
else
{ 
    <h1 class="no-questions">No questions found!</h1>
}

