@model ForumSystem.Models.QuestionViewModel

@{
    var currentUser = (ForumSystem.Models.User)Session["CurrentUser"];
}

@if (User.Identity.IsAuthenticated)
{
    using (Html.BeginForm("PostQuestion", "Category", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)
        
        <div class="image-holder">
            @if (currentUser.Image == null)
            {
                <img src="~/fonts/no_user_photo.png" />
            }
            else
            {

            }
        </div>
        <div class="new-post">
            <div class="form-group">
                @Html.TextBoxFor(x => x.Title,
                    new { @id = "question-title", @class = "form-control", @placeholder = "Question in few words..." })
            </div>
            <div class="form-group">
                @Html.TextAreaFor(x => x.QuestionContent, 
                    new { @id = "question-content", @class = "form-control", @rows = "5", @placeholder = "More detailed explanation here..." })
            </div>
            <input type="submit" class="btn btn-primary" value="Post" />
        </div>
    }
}

