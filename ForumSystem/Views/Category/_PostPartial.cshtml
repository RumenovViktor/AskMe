@model ForumSystem.Models.QuestionViewModel

@if (User.Identity.IsAuthenticated)
{
    using (Html.BeginForm("PostQuestion", "Category", FormMethod.Post, new { @class = "form-control" }))
    {
        Html.TextAreaFor(x => x.Title, new { @class = "question-title" });
        <input type="submit" class="btn btn-default" />
    }
}

