@model IEnumerable<ForumSystem.Models.Comment>

@if (Model.Count() > 0)
{
    for (int i = 0; i < Model.Count(); i++)
    {
        <div class="single-comment">
            <p>@Model.ElementAt(i).User.UserName</p>
            <p>@Model.ElementAt(i).CommentContent</p>
            <ul class="date-time answer-time">
                <li class="day time">@Model.ElementAt(i).PostDate.Day<span>/</span></li>
                <li class="month time">@Model.ElementAt(i).PostDate.Month<span>/</span></li>
                <li class="year time">@Model.ElementAt(i).PostDate.Year<span>|</span></li>
                <li class="hour time">@Model.ElementAt(i).PostDate.Hour<span>:</span></li>
                <li class="minutes time">@Model.ElementAt(i).PostDate.Minute</li>
            </ul>
        </div>
    }
}
else
{
    <h4>There are no comments for this answer! :)</h4>
}

