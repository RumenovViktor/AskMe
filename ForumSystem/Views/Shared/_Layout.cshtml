<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Ask.Me</title>
    <link href="~/Styles/MainLayoutStyle.css" rel="stylesheet" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>

    <!-- TODO: Center all the elements on the page so it looks better. -->

    <div class="navbar navbar-inverse navbar-fixed-top navbar-custom">
        <div class="container">
            <img id="icon" src="~/fonts/220px-Question_mark_grey.svg.png"/>
            <div class="navbar-header">
                @Html.ActionLink("Ask.Me", "Index", "Home", new { area = "" }, new { @class = "navbar-brand-custom navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div id="category-container">
        @* @Html.Partial("_CategoryContainerPartial") *@
    </div>
    <div class="container body-content">
        @RenderBody()
        <footer>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/jqueryval")
    @RenderSection("scripts", required: false)
    <script src="~/Scripts/events.js"></script>
</body>
</html>
